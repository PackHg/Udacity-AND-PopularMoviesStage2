<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin">

        <ImageView
            android:id="@+id/detail_trailer_thumbnail"
            android:layout_width="@dimen/detail_trailer_thumbnail_width"
            android:layout_height="@dimen/detail_trailer_thumbnail_height"
            android:contentDescription="@string/trailer_thumbnail"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_movie_launcher" />

        <TextView
            android:id="@+id/detail_trailer_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/detail_trailer_thumbnail"
            app:layout_constraintLeft_toLeftOf="@id/detail_trailer_thumbnail"
            app:layout_constraintRight_toRightOf="@id/detail_trailer_thumbnail"
            app:layout_constraintTop_toTopOf="@id/detail_trailer_thumbnail"
            tools:text="Trailer 2" />

    </android.support.constraint.ConstraintLayout>
</layout>