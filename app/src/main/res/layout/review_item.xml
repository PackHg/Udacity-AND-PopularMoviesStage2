<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/review_author_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_author_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/review_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            app:layout_constraintLeft_toRightOf="@+id/review_author_label"
            app:layout_constraintTop_toTopOf="@+id/review_author_label"
            tools:text="Victor Hugo" />

        <TextView
            android:id="@+id/review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/review_author_label"
            tools:text="@string/review_content_example"/>

    </android.support.constraint.ConstraintLayout>

</layout>